<!doctype html>
<html lang="en">
<head>
    <title>{{page.global.site_name}}</title>
    <meta name="description" content="" />

    {{>head}}
</head>

<body>
    <div class="blocks-page">
		<section class="smart-scroll">
			<div class="container-fluid">
				<nav class="navbar navbar-expand-md navbar-light">
					<a class="navbar-brand heading-black" href="/">
						<img class="img-logo" src="{{{page.global.img_logo_nav}}}=s240"/>
					</a>
					<button class="navbar-toggler navbar-toggler-right border-0" type="button" data-toggle="collapse"
							data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false"
							aria-label="Toggle navigation">
						<i class="fa fa-bars"></i>
					</button>
					<div class="collapse navbar-collapse" id="navbarCollapse">
						<ul class="navbar-nav ml-auto mobile-nav">
							{{#page.global.header_nav.nav1.show_or_hide}}
							<li class="nav-item">
								<a class="nav-link" href="{{{page.global.header_nav.nav1.link}}}">{{page.global.header_nav.nav1.text}}</a>
							</li>
							{{/page.global.header_nav.nav1.show_or_hide}}

							{{#page.global.header_nav.nav2.show_or_hide}}
							<li class="nav-item">
								<a class="nav-link" href="{{{page.global.header_nav.nav2.link}}}">{{page.global.header_nav.nav2.text}}</a>
							</li>
							{{/page.global.header_nav.nav2.show_or_hide}}

							{{#page.global.header_nav.nav3.show_or_hide}}
							<li class="nav-item">
								<a class="nav-link" href="{{{page.global.header_nav.nav3.link}}}">{{page.global.header_nav.nav3.text}}</a>
							</li>
							{{/page.global.header_nav.nav3.show_or_hide}}
						</ul>
					</div>
				</nav>
			</div>
		</section>


		<section style="background:url('{{{page.hero.img_background}}}');background-size:cover;background-position:center;">
			<div class="gradient-div py-3" style="height:76vh">

				<div class="container">
					<div class="row justify-content-center header-row">
						<div class="col-12 col-md-8 col-lg-7 text-center text-white">
							<img style = "max-width: 160px; border-radius: 50%" src = "{{{page.hero.img_profile}}}=s320-c">
							<h1 class="display-3 mt-2">{{page.hero.greeting}}</h1>
							<p class="lead text-white mb-4 mt-2">
								{{page.hero.introduction}}
							</p>
						</div>
					</div>
				</div>
			</div>
		</section>

		<section class="bg-white fullwidth-split">
			<div class="container-fluid p-0">
				<div class="row no-gutters">
					<div class="col-12 col-sm-5 col-lg-6 fullwidth-split-image d-sm-flex align-items-center pt-0">
						<img style="width:100%" alt="Image" src="{{{page.feature.img_welcome}}}=s1024">
					</div>
					<!--end of col-->
					<div class="col-12 col-sm-7 col-lg-6 fullwidth-split-text pt-0">
						<div class="col-12 col-sm-8">
							<h3 class="display-4 mt-5">{{page.feature.greeting}}</h3>
							<p class="lead">
								{{page.feature.greeting_1}}
							</p>
							<p class ="lead">
								{{page.feature.greeting_2}}
							</p>
						</div>
					</div>
					<!--end of col-->
				</div>
				<!--end of row-->
			</div>
			<!--end of container-->
		</section>
		<section class="bg-white fullwidth-split">
			<div class="container-fluid p-0">
				<div class="row no-gutters">
					<div class="col-12 col-sm-7 col-lg-6 fullwidth-split-text pt-0">
						<div class="col-12 col-sm-8">
							<h3 class="display-4 mt-4">{{page.about.head}}</h3>
							<p class="lead">
								{{page.about.about_1}}
							</p>
							<p class = "lead">
								{{page.about.about_4}}
							</p>
						</div>
					</div>
					<!--end of col-->
					<div class="col-12 col-sm-5 col-lg-6 fullwidth-split-image d-sm-flex align-items-center pt-0">
						<img style="width:100%" alt="Image" src="{{{page.about.img_aboutme}}}=s1024">
					</div>
					<!--end of col-->
					
				</div>
				<!--end of row-->
			</div>
			<!--end of container-->
		</section>
		<section class="bg-white fullwidth-split">
			<div class="container-fluid p-0">
				<div class="row no-gutters">
					<div class="col-12 col-sm-5 col-lg-6 fullwidth-split-image d-sm-flex align-items-center pt-0">
						<img style="width:100%" alt="Image" src="{{{page.info.img_info}}}=s1024">
					</div>
					<!--end of col-->
					<div class="col-12 col-sm-7 col-lg-6 fullwidth-split-text pt-0">
						<div class="col-12 col-sm-8">
							<p class="lead pt-5">
								{{page.info.about_2}}
							</p>
							<p class ="lead">
								{{page.info.about_3}}
							</p>
						</div>
					</div>
					<!--end of col-->
				</div>
				<!--end of row-->
			</div>
			<!--end of container-->
		</section>
		<footer class="pt-3">
			 <div class="container pt-5 pb-5">
				<div class="row">
					<div class="col-md-12 text-center">
						<p><img class="img-logo-footer" src="{{{page.global.img_logo_footer}}}=s440"/></p>

						<ul class="list-inline social social-white-alt social-rounded social-sm mb-0">
							
							{{#page.global.social.linkedin.show_or_hide}}
							<li class="list-inline-item"><a href="{{{page.global.social.linkedin.link}}}" target="_blank"><i class="fa fa-linkedin"></i></a></li>
							{{/page.global.social.linkedin.show_or_hide}}

						   
							{{#page.global.social.github.show_or_hide}}
							<li class="list-inline-item"><a href="{{{page.Sglobal.social.github.link}}}" target="_blank"><i class="fa fa-github"></i></a></li>
							{{/page.global.social.github.show_or_hide}}

						</ul>
					</div>
				</div>
			</div>
		</footer>
    </div>

    {{>scripts}}
</body>
</html>
