<!doctype html>
<html lang="en">

<style>
html {
  scroll-behavior: smooth;
}
</style>
<head>
    <title>Projects</title>
    <meta name="description" content="" />
	
	{{>head}}
</head>

<body>
	<div class="blocks-page">
		<section class="smart-scroll">
			<div class="container-fluid">
				<nav class="navbar navbar-expand-md navbar-light">
					<a class="navbar-brand heading-black" href="/">
						<img class="img-logo" src="{{{page.global.img_logo_nav}}}=s240"/>
					</a>
					<button class="navbar-toggler navbar-toggler-right border-0" type="button" data-toggle="collapse"
							data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false"
							aria-label="Toggle navigation">
						<i class="fa fa-bars"></i>
					</button>
					<div class="collapse navbar-collapse" id="navbarCollapse">
						<ul class="navbar-nav ml-auto mobile-nav">
							{{#page.global.header_nav.nav1.show_or_hide}}
							<li class="nav-item">
								<a class="nav-link" href="{{{page.global.header_nav.nav1.link}}}">{{page.global.header_nav.nav1.text}}</a>
							</li>
							{{/page.global.header_nav.nav1.show_or_hide}}

							{{#page.global.header_nav.nav2.show_or_hide}}
							<li class="nav-item">
								<a class="nav-link" href="{{{page.global.header_nav.nav2.link}}}">{{page.global.header_nav.nav2.text}}</a>
							</li>
							{{/page.global.header_nav.nav2.show_or_hide}}

							{{#page.global.header_nav.nav3.show_or_hide}}
							<li class="nav-item">
								<a class="nav-link" href="{{{page.global.header_nav.nav3.link}}}">{{page.global.header_nav.nav3.text}}</a>
							</li>
							{{/page.global.header_nav.nav3.show_or_hide}}
						</ul>
					</div>
				</nav>
			</div>
		</section>

		<section class="py-5 py-md-7" style="background:url('{{{page.top_background}}}');background-size:cover;background-position:center;">
			<div class="container py-md-5">
				<div class="row block-header">
					<div class="col-sm-8 mx-auto text-center">
						<h1 class="display-4 mt-2">{{page.header}}</h1>
						<hr>
						<p class="lead">{{page.subheader}}</p>
					</div>
				</div>

				<div class="row mt-5 aos-init aos-animate" data-aos="fade-up" data-aos-duration="1000">
					{{#projects}}
					<div class="col-md-4 col-sm-12 mb-2r">
						<a href="#{{{slug}}}">
							<div class="position-relative project">
								<div class="image position-relative ">
									<img src="{{{image}}}" class="img-fluid w-100 d-block">
									<div class="overlay-box">
										<div class="overlay-inner overlay-content">
											<h5 class="mb-0">{{name}}</h5>
											<p>{{category}}</p>
										</div>
									</div>
								</div>
							</div>
						</a>
					</div>
					{{/projects}}
				</div>
				
			</div>
		</section>
		<section class="py-md-5" style="background:#f9f9f9">
			<div class="container py-5">
				<div class="row justify-content-center text-center section-intro">
					<div class="col-12 col-md-9 col-lg-8">
						<h1 class="display-4 ">{{page.header2}}</h1>
					</div>
				</div>

				<ul class="feature-list feature-list-lg">
					{{#projects}}
					<li class="row align-items-center mb-4">
						<div  id = "{{slug}}" class="col-12 col-md-6 col-lg-3 offset-lg-2">
							<img class="img-fluid rounded" alt="Image" src="{{{image}}}=s1024-c" />
						</div>

						<div class="col-12 col-md-6 col-lg-6">
							<h5>{{name}} ({{dateRange}})</h5>
							{{{description}}}
							{{#link}}
								<a href="{{link}}">{{page.link}}&rsaquo;</a>
							{{/link}}
						</div>
					</li>
					{{/projects}}
				</ul>
			</div>
		</section>
		<footer class="pt-3">
		 <div class="container pt-5 pb-5">
			<div class="row">
				<div class="col-md-12 text-center">
					<p><img class="img-logo-footer" src="{{{page.global.img_logo_footer}}}=s440"/></p>

					<ul class="list-inline social social-white-alt social-rounded social-sm mb-0">
						
						{{#page.global.social.linkedin.show_or_hide}}
						<li class="list-inline-item"><a href="{{{page.global.social.linkedin.link}}}" target="_blank"><i class="fa fa-linkedin"></i></a></li>
						{{/page.global.social.linkedin.show_or_hide}}

					   
						{{#page.global.social.github.show_or_hide}}
						<li class="list-inline-item"><a href="{{{page.global.social.github.link}}}" target="_blank"><i class="fa fa-github"></i></a></li>
						{{/page.global.social.github.show_or_hide}}

					</ul>
				</div>
			</div>
		</div>
	</footer>

	</div>
</body>

<script>
$('a').click(function(){
    $('html, body').animate({
        scrollTop: $( $(this).attr('href') ).offset().top
    },1000);
    return false;
});
</script>
</html>
